<img src="assets/img/burger.jpg" alt="burger logo">
        <br>
        <h1>Eat-Da-Burger!</h1>
        <br>
        <div class = "grid-container">
            <div class = "undevoured">
                <ul>
                 {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger_block devour=true}}
                    {{/unless}}
                 {{/each}}
                </ul>
            </div>

        
            <div class= "devoured">
                <ul>
                 {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger_block devour=false}}
                    {{/if}}
                 {{/each}}
                </ul>
            </div>
        </div>

        
        <form class="create-form">

            <textarea id="burger" name="name"></textarea><br>
            <button type="submit" id="add_burger">submit</button>
            <p id = "description">Enter a burger you want to eat Click the "submit" button</p>
        </form>

        <br>
        {{> footer_block}}